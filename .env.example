# Copy this file to .env and fill in your values.
# .env is gitignored — never commit secrets.

# ─── Auth Service (port 3000) ─────────────────────────────────────────────────
MONGODB_URI=mongodb://localhost:27017/snapsalon-auth
JWT_ACCESS_SECRET=change-me
JWT_REFRESH_SECRET=change-me
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
AUTH_PORT=3003
AUTH_GOOGLE_CLIENT_ID=
AUTH_GOOGLE_CLIENT_SECRET=
AUTH_GOOGLE_CALLBACK_URL=http://localhost:3003/api/auth/google/callback
FRONTEND_URL=http://localhost:4200

# ─── Salon Service (port 3001) ────────────────────────────────────────────────
SALON_MONGODB_URI=mongodb://localhost:27017/snapsalon-salon
SALON_PORT=3001

# ─── Booking Service (port 3002) ──────────────────────────────────────────────
BOOKING_MONGODB_URI=mongodb://localhost:27017/snapsalon-booking
BOOKING_PORT=3002
REDIS_HOST=localhost
REDIS_PORT=6379
SALON_SERVICE_URL=http://localhost:3001

# ─── Notification Service ─────────────────────────────────────────────────────
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@snapsalon.lk
EMAIL_FROM_NAME=SnapSalon

# Dialog Axiata SMS Gateway (Sri Lanka)
DIALOG_SMS_API_KEY=
DIALOG_SMS_BASE_URL=https://e-sms.dialog.lk/api/v2
SMS_SENDER_ID=SnapSalon

# WhatsApp Business Cloud API (Meta)
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_TEMPLATE_NAME=snapsalon_notification
WHATSAPP_TEMPLATE_LANG=en_US
WHATSAPP_BASE_URL=https://graph.facebook.com/v18.0

# ─── Calendar Service (port 3005) ─────────────────────────────────────────────
CALENDAR_MONGODB_URI=mongodb://localhost:27017/snapsalon-calendar
CALENDAR_PORT=3005
MONGODB_URI=mongodb://localhost:27017/snapsalon-calendar
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3005/api/calendar/oauth2/callback
BOOKING_SERVICE_URL=http://localhost:3002

# ─── Review Service (port 3006) ──────────────────────────────────────────────
REVIEW_MONGODB_URI=mongodb://localhost:27017/snapsalon-reviews
REVIEW_PORT=3006

# ─── Subscription Service (port 3007) ─────────────────────────────────────────
SUBSCRIPTION_MONGODB_URI=mongodb://localhost:27017/snapsalon-subscriptions
SUBSCRIPTION_PORT=3007
