# Copy this file to .env and fill in your values.
# .env is gitignored — never commit secrets.

# ─── Auth Service (port 3000) ─────────────────────────────────────────────────
MONGODB_URI=mongodb://localhost:27017/snapsalon-auth
JWT_ACCESS_SECRET=change-me
JWT_REFRESH_SECRET=change-me
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
AUTH_PORT=3003

# ─── Salon Service (port 3001) ────────────────────────────────────────────────
SALON_MONGODB_URI=mongodb://localhost:27017/snapsalon-salon
SALON_PORT=3001

# ─── Booking Service (port 3002) ──────────────────────────────────────────────
BOOKING_MONGODB_URI=mongodb://localhost:27017/snapsalon-booking
BOOKING_PORT=3002
REDIS_HOST=localhost
REDIS_PORT=6379

# ─── Notification Service ─────────────────────────────────────────────────────
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
EMAIL_FROM=noreply@snapsalon.com

# ─── Calendar Service (port 3005) ─────────────────────────────────────────────
CALENDAR_MONGODB_URI=mongodb://localhost:27017/snapsalon-calendar
CALENDAR_PORT=3005
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3005/api/calendar/oauth2/callback

# ─── Review Service (port 3006) ──────────────────────────────────────────────
REVIEW_MONGODB_URI=mongodb://localhost:27017/snapsalon-reviews
REVIEW_PORT=3006

# ─── Subscription Service (port 3007) ─────────────────────────────────────────
SUBSCRIPTION_MONGODB_URI=mongodb://localhost:27017/snapsalon-subscriptions
SUBSCRIPTION_PORT=3007
